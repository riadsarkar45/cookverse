generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Recipe {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  category     String
  instructions String
  addedBy      Int
  isPublic     Boolean   @default(false)
  createdAt    DateTime  @default(now())
}
